$("#modal-patient-add-advanced-directives").html("<%= escape_javascript(render 'patient_add_advanced_directives_form') %>")
$("#modal-patient-add-advanced-directives").modal("show")

initPickers('#modal-patient-add-advanced-directives');

$(function() {
  $('#modal-patient-add-advanced-directives .button-today').click(function(e) {
    e.preventDefault();
    $(this).parent().parent().parent().find('.date-picker').datepicker('setDate', moment()._d);
  })
})