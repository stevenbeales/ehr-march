$("#modal-patient-smoking").html("<%= escape_javascript(render 'patient_edit_smoking_form') %>")
$("#modal-patient-smoking").modal("show")

initPickers('#modal-patient-smoking');

$(function() {
  $('#modal-patient-smoking .button-today').click(function(e) {
    e.preventDefault();
    $(this).parent().parent().parent().find('.date-picker').datepicker('setDate', moment()._d);
  })
})